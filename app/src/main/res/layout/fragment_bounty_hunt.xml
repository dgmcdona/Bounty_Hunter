<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BountyHunt">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/ig88_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IG-88" />

            <RadioButton
                android:id="@+id/boba_fett_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Boba Fett" />

            <RadioButton
                android:id="@+id/bossk_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bossk" />
        </RadioGroup>

        <TextView
            android:id="@+id/select_planet_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_planet"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/planets"
            android:spinnerMode="dropdown"
            android:prompt="@string/select_planet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/select_bounty_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_bounty"
            android:textSize="30sp" />

        <Spinner
            android:id="@+id/targets"
            android:spinnerMode="dropdown"
            android:prompt="@string/select_bounty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/target_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

        <Button
            android:id="@+id/start_hunt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_hunt" />

    </LinearLayout>
</FrameLayout>